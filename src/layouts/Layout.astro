    border-bottom: 2px solid transparent; /* Underline effect */
    border-radius: 0;
  }

  .main-nav a:hover {
    color: var(--primary);
    background: transparent;
    border-bottom-color: var(--secondary); /* Accent color underline */
  }

  /* Main Content */
