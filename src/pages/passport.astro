        fetchData();
        fetchLeaderboard();
    });

    function fetchData() {
        Papa.parse(CSV_URL, {
            download: true,
            header: true,
            skipEmptyLines: true,
            complete: function(results) {
                if (!results.data || results.data.length === 0) {
                    document.getElementById('loading').innerHTML = '<div class="alert alert-warning"><span>âš ï¸ è¼‰å…¥æˆåŠŸä½†æ²’æœ‰è³‡æ–™</span></div>';
                    return;
