                if(Array.isArray(parsed)) {
                    visitedShops = parsed;
                    localStorage.setItem('visited_shops', JSON.stringify(visitedShops));
                    location.reload();
                } else {
                    alert('æ ¼å¼éŒ¯èª¤');
