---
import Layout from '../../layouts/Layout.astro';
import type { Store } from '../../types';
import storesData from '../../data/stores.json';

const stores: Store[] = storesData;
---

<Layout title="友善店家 - 台灣支持名錄">
  <h1>友善店家</h1>
  <p class="intro">支持台灣的店家與商店。</p>

  {stores.length > 0 ? (
    <div class="card-grid">
      {stores.map((item) => (
        <div class="card">
          <h3>{item.name}</h3>
          <span class="tag">{item.category}</span>
          <p>{item.description}</p>
          <p><a href={item.website} target="_blank" rel="noopener noreferrer">官方網站 →</a></p>
        </div>
      ))}
    </div>
  ) : (
    <p class="empty">目前沒有資料，歡迎貢獻！</p>
  )}
</Layout>
