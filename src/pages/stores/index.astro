---
import Layout from '../../layouts/Layout.astro';
import type { Store } from '../../types';
import storesData from '../../data/stores.json';

const stores: Store[] = storesData;
---

<Layout title="友善店家 - 台灣支持名錄">
  <div class="page-header">
    <h1>友善店家</h1>
    <p class="intro">支持台灣的店家與商店。</p>
  </div>

  {stores.length > 0 ? (
    <div class="card-grid">
      {stores.map((item) => (
        <div class="card store-card">
          <div class="card-header">
            <h3>{item.name}</h3>
            <span class="tag category-tag">{item.category}</span>
          </div>
          
          <div class="card-body">
            <p class="description">{item.description}</p>
          </div>

          <div class="card-footer">
            <a href={item.website} target="_blank" rel="noopener noreferrer" class="visit-btn">
              官方網站 ↗
            </a>
          </div>
        </div>
      ))}
    </div>
  ) : (
    <p class="empty">目前沒有資料，歡迎貢獻！</p>
  )}
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .intro {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-top: 1rem;
    font-family: 'Noto Serif TC', serif;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .store-card {
    background: var(--bg-surface);
    border: none;
    border-radius: var(--radius);
    padding: 2rem;
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .store-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .card-header {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 1rem;
  }

  .store-card h3 {
    font-size: 1.5rem;
    color: var(--primary);
    word-break: break-all;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
    white-space: nowrap;
  }

  .category-tag {
    background: #fff1eb; /* Light terracotta */
    color: var(--secondary);
  }

  .card-body {
    flex: 1;
    margin-bottom: 2rem;
  }

  .description {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.6;
  }

  .card-footer {
    border-top: 1px solid var(--border);
    padding-top: 1.5rem;
    display: flex;
    justify-content: flex-end;
  }

  .visit-btn {
    color: var(--secondary);
    font-size: 0.95rem;
    font-weight: 600;
  }

  .visit-btn:hover {
    color: var(--primary);
  }

  .empty {
    text-align: center;
    color: var(--text-muted);
    padding: 3rem;
  }
</style>
