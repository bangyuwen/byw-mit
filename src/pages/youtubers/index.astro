---
import Layout from '../../layouts/Layout.astro';
import type { YouTuber } from '../../types';
import youtubersData from '../../data/youtubers.json';

const youtubers: YouTuber[] = youtubersData;
---

<Layout title="創作者 - 台灣支持名錄">
  <h1>創作者</h1>
  <p class="intro">支持台灣的 YouTuber 與內容創作者。</p>

  {youtubers.length > 0 ? (
    <div class="card-grid">
      {youtubers.map((item) => (
        <div class="card">
          <h3>{item.name}</h3>
          <span class="tag">{item.category}</span>
          <p>{item.description}</p>
          <p><a href={item.channel} target="_blank" rel="noopener noreferrer">YouTube 頻道 →</a></p>
        </div>
      ))}
    </div>
  ) : (
    <p class="empty">目前沒有資料，歡迎貢獻！</p>
  )}
</Layout>
